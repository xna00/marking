{
  "manifest_version": 3,
  "name": "marking",
  "version": "1.5",
  "description": "A Chrome extension for marking and annotating web pages",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs",
    "webRequest",
    "debugger",
    "management"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.mjs",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon.png",
      "48": "images/icon.png",
      "128": "images/icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.wylkyj.com/yuejuan/*"],
      "js": ["content.mjs"]
    },
    {
      "matches": ["https://marking.xna00.top/*", "http://127.0.0.1:8080/*"],
      "js": ["extensionHelper.mjs"]
    }
  ],
  "icons": {
    "16": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  }
}